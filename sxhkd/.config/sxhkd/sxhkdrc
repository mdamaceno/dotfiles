XF86Explorer
    thunar

{XF86AudioRaiseVolume,XF86AudioLowerVolume}
    pactl set-sink-volume @DEFAULT_SINK@ {+5%,-5%} && $refresh_i3status

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status

XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

{XF86MonBrightnessUp,XF86MonBrightnessDown}
    xbacklight {-inc,-dec} 10

super + o; {b,c}
    {brave,code}

super + Return
    i3 exec alacritty

super + q
    i3 kill

super + {h,j,k,l,Left,Down,Up,Right}
    i3 focus {left,down,up,right,left,down,up,right}

super + shift + {h,j,k,l,Left,Down,Up,Right}
    i3 move {left,down,up,right,left,down,up,right}

super + {s,w}
    i3 layout {stacked,default}

super + f
    i3 fullscreen toggle

super + e
    i3 layout toggle split

super + space
    i3 focus mode_toggle

super + shift + space
    i3 floating toggle

super + {1-9}
    i3 workspace number {1-9}

super + shift + {1-9}
    i3 move container to workspace number {1-9}

super + p
    dmenu_run -l 10
    # rofi -modi drun,run -show drun

super + c
    i3 reload

super + shift + r
    i3 restart && kill -s SIGUSR1 $(pgrep sxhkd)

super + shift + e
    i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'

super + r
    i3 mode "resize"

super + ctrl + {h,l}
    i3 workspace {prev,next}

super + x
    i3lock -c 401E89
