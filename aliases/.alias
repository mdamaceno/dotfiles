alias dc="docker compose"
alias now="date \"+%d/%m/%Y %H:%M:%S\""
alias today="cal && now"
alias cnvim='nvim $HOME/.config/nvim/init.vim'
alias vimod='nvim $(git status --porcelain | awk "/^ M/{print \$2}")'
alias loadbash='source ~/.bashrc'
alias cbash='nvim $HOME/.bashrc'
alias czsh='nvim $HOME/.zshrc'
alias calac='nvim $HOME/.config/alacritty/alacritty.yml'
alias ctmux='nvim $HOME/.tmux.conf'
alias weather='clear && echo "Loading..." && curl wttr.in/juiz+de+fora'
alias ..='cd ..'
alias mv='mv -i'
alias rm='rm -i'
alias grep='grep --color=auto'
alias tmux='tmux -2'
alias updategrub='sudo grub-mkconfig -o /boot/grub/grub.cfg'
alias update_fonts="fc-cache -fv"
alias reload_udev="sudo udevadm control --reload"
alias calias="nvim $HOME/.alias"
alias ckitty="nvim $HOME/.config/kitty/kitty.conf"

alias sec="cd /media/mdamaceno/SECONDARY"

# SystemD
alias s-status="sudo systemctl status"
alias s-start="sudo systemctl start"
alias s-stop="sudo systemctl stop"
alias s-enable="sudo systemctl enable"
alias s-disable="sudo systemctl disable"

# Apt Get (Debian)
alias ain="sudo apt install"
alias aup="sudo apt update && sudo apt upgrade"
alias adup="sudo apt dist-upgrade"
alias arm="sudo apt remove"
alias ase="apt search"

# Zypper (OpenSUSE)
alias zin="sudo zypper in"
alias zup="sudo zypper ref && sudo zypper up"
alias zdup="sudo zypper dup"
alias zrm="sudo zypper rm"
alias zse="zypper se"

# DNF (Fedora)
alias din="sudo dnf install"
alias dup="sudo dnf update"
alias dse="dnf search"
alias drm="sudo dnf remove"

alias update_dbeaver="sudo dnf install https://dbeaver.io/files/dbeaver-ce-latest-stable.x86_64.rpm"

# Translation
alias pt2en="trans -b pt:en"
alias en2pt="trans -b en:pt"
alias pt2es="trans -b pt:es"
alias es2pt="trans -b es:pt"

# Clipboard
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

# Bundle
alias be='bundle exec'

# Git
alias lg="lazygit"
alias glo='git log --pretty="oneline" --abbrev-commit'
alias glol="git log --pretty='%C(yellow)%h %C(cyan)%cd %Cblue%aN%C(auto)%d %Creset%s' --graph --date=relative --date-order"
alias gstatus='git status'
alias gco='git checkout'
alias branch="git branch --show-current"
